<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="tw.y_studio.ptt.ui.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment_layout"/>
    <fragment
        android:id="@+id/postArticleFragment"
        android:name="tw.y_studio.ptt.ui.fragment.PostArticleFragment"
        android:label="PostArticleFragment"
        tools:layout="@layout/post_article_fragment_layout"/>
    <fragment
        android:id="@+id/articleListSearchFragment"
        android:name="tw.y_studio.ptt.ui.fragment.ArticleListSearchFragment"
        android:label="ArticleListSearchFragment"
        tools:layout="@layout/article_list_search_fragment_layout"/>
    <fragment
        android:id="@+id/articleReadFragment"
        android:name="tw.y_studio.ptt.ui.article.read.ArticleReadFragment"
        android:label="ArticleReadFragment"
        tools:layout="@layout/article_read_fragment_layout"/>
    <fragment
        android:id="@+id/loginPageFragment"
        android:name="tw.y_studio.ptt.ui.fragment.LoginPageFragment"
        android:label="LoginPageFragment"
        tools:layout="@layout/login_page_fragment_layout"/>
    <fragment
        android:id="@+id/articleListFragment"
        android:name="tw.y_studio.ptt.ui.article.list.ArticleListFragment"
        android:label="ArticleListFragment"
        tools:layout="@layout/article_list_fragment_layout">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="subtitle"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/searchBoardsFragment"
        android:name="tw.y_studio.ptt.ui.fragment.SearchBoardsFragment"
        android:label="SearchBoardsFragment"
        tools:layout="@layout/search_boards_fragment_layout"/>
    <fragment
        android:id="@+id/hotArticleFilterFragment"
        android:name="tw.y_studio.ptt.ui.fragment.HotArticleFilterFragment"
        android:label="HotArticleFilterFragment"
        tools:layout="@layout/hot_article_list_fragment_layout"/>


</navigation>